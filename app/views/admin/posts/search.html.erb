<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>検索結果</h2>

      <%= form_tag(admin_search_path,:method => 'get') do %>
        <%= text_field_tag :search %>
        <%= submit_tag 'Search', :name => nil %>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>作成日</th>
            <th>タイトル</th>
            <th>タグ</th>
            <th>作成者</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= link_to post.title, admin_post_path(post) %></td>
              <td>
                <% post.tag_list.each do |tag| %>
                  <%= link_to tag, admin_posts_path(tag_name: tag), class: "btn btn-info" %>
                <% end %>
              </td>
              <td><%= link_to post.user.name, admin_user_path(post.user_id) %></td>
              <td><%= link_to '削除', admin_post_path(post), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に削除しますか？" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>