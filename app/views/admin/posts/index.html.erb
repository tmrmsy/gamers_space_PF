<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>投稿一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>作成日</th>
            <th>タイトル</th>
            <th>作成者</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.created_at %></td>
              <td><%= post.title %></td>
              <td><%= post.user.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>