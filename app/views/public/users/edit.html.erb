<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>ユーザー情報編集</h2>
      <div class="form-group">

        <%= form_with model: @user, url: user_path(@user.id) do |f| %>
        <label>Name</label>
        <%= f.text_field :name, class: "form-control" %><br />

        <label>Email</label>
        <%= f.email_field :email, class: "form-control" %><br />

        <%= f.submit '変更を保存', class: 'btn btn-success' %>

        <% end %>
      </div>

      <%= link_to "アカウント削除", user_path(@user.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当にアカウントを削除します？" %>
    </div>
  </div>
</div>