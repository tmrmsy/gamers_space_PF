<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>投稿一覧</h2>
      <% if user_signed_in? %>
        <%= link_to "新規投稿", new_post_path, class: "btn btn-primary" %>
      <% end %>
      <table class="table">
        <thead>
          <tr>
            <th>作成日</th>
            <th>タイトル</th>
            <th>作成者</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td><%= post.created_at.strftime("%Y-%m-%d %H:%M") %></td>
              <td><%= link_to post.title, post_path(post.id) %></td>
              <td><%= link_to post.user.name, user_path(post.user_id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
  </div>
</div>