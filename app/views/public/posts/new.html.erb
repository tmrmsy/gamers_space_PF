<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>新規投稿</h2>
      <div class="form-group">

      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <label>タイトル</label>
          <%= f.text_field :title, class: "form-control" %><br />
        </div>

        <div class="form-group">
          <label>メッセージ</label>
          <%= f.text_area :content, class: "form-control" %><br />
        </div>

        <div class="form-group">
          <%= f.submit '投稿する', class: 'btn btn-success' %>
        </div>

      <% end %>
      </div>
    </div>
  </div>
</div>