<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>新規投稿</h2>

      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <%= f.label :title, "タイトル" %>
          <%= f.text_field :title, class: "form-control" %><br />
        </div>

        <div class="form-group">
          <%= f.label :content, "メッセージ" %>
          <%= f.text_area :content, class: "form-control" %><br />
        </div>

        <div class="form-group">
          <%= f.label :tag_list, "タグ([,]で区切ると複数設定できます。)" %>
          <%= f.text_field :tag_list, value: @post.tag_list.join(','), class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit '投稿する', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>